<% include ../partials/header %>
    <div class="border1">
        <h1 style="text-align:center;">Edit Blog</h1>
        <form method="POST" action="/blog/<%=foundblog._id%>?_method=PUT">
            <div class="form-group form">
                <input class="form-control" type="text" name="blog[name]" value="<%=foundblog.name%>">    
            </div>

            <div class="form-group form">
                <input class="form-control" type="text" name="blog[image]" value="<%=foundblog.image%>" placeholder="URL">    
            </div>
            
            <div class="form-group form">
                <input class="form-control" type="text" name="blog[description]" value="<%=foundblog.description%>">    
            </div>

            <div class="form-group form">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>    
            </div>
            
        </form>
        <div class="form-group form">
            <a href="/blog" class="btn btn-lg btn-default btn-block"> Go Back </a>
        </div>
        
    </div>
    
<% include ../partials/footer%>